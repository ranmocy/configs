#!/usr/bin/env ruby

WHITELIST = [
  # 'aws-sam-cli',
  # 'awscli',
  # 'curl',
  # 'coreutils',
  'entr',
  'fish',
  'gh',
  # 'git-extras',
  # 'htop-osx',
  # 'heroku',
  # 'jq',
  # 'openjdk',
  # 'libyaml', # deps for rvm/ruby
  # 'mongodb-community',
  # 'node',
  # 'phantomjs', # for rCaltrain JS test
  # 'postgresql@15',
  'pyenv',
  # 'python',
  # 'terminal-notifier',
  'texlive',
  # 'tmux',
  # 'wget',
  # cross compile
  # 'aarch64-unknown-linux-gnu',
  # 'x86_64-unknown-linux-gnu',
]

loop {
  to_remove = `brew leaves`
    .split("\n")
    .map { |long_name|
      long_name.split('/').last
    }.delete_if { |name|
      WHITELIST.include?(name)
    }

  if to_remove.empty?
    puts "All cleaned up"
    exit 0
  end

  puts "Confirm to remove:"
  puts to_remove
  puts
  print 'yes|y:'
  unless ['yes', 'y'].include?(gets.chomp)
    puts 'abort'
    exit 1
  end

  to_remove
    .each { |name|
      puts `brew uninstall #{name}`
    }
}
